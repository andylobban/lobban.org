{
  "name": "npm-build-boilerplate",
  "version": "1.2.0",
  "description": "A set of common build tasks written with npm scripts.",
  "author": "Damon Bauer <hello@damonbauer.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/damonbauer/npm-build-boilerplate"
  },
  "bugs": "https://github.com/damonbauer/npm-build-boilerplate/issues",
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style expanded -o dist/css/ src/sass/",
    "scss-compressed": "node-sass --output-style compressed -o dist/css/ src/sass/",
    "lint": "eslint src/js || true",
    "lint-scss": "stylelint src/sass/*.scss --syntax scss || true",
    "uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/app.js",
    "uglify-compressed": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -c -o dist/js/app.js",
    "bitmaps": "imagemin src/images/bitmaps/* -o dist/images",
    "vectors": "svgo -f src/images/vectors/ -o dist/images",
    "fonts": "mkdirp dist/fonts -p && cp src/fonts/* dist/fonts",
    "assets": "mkdirp dist/assets -p && cp src/assets/* dist/assets",
    "serve": "browser-sync start --proxy 'lobban.dev' --files \"dist/css/*.css, dist/js/*.js, dist/fonts/*, dist/images/*, **/*.php\"",
    "build:css": "run-s lint-scss scss-compressed autoprefixer",
    "build:js": "run-s lint uglify-compressed",
    "build:bitmaps": "run-s bitmaps",
    "build:vectors": "run-s vectors",
    "build:fonts": "run-s fonts",
    "build:assets": "run-s assets",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/sass\" -- run-s lint-scss scss",
    "watch:js": "onchange \"src/js\" -- run-s lint uglify",
    "watch:bitmaps": "onchange \"src/images/bitmaps\" -- cp src/images/bitmaps/* dist/images",
    "watch:vectors": "onchange \"src/images/vectors\" -- cp src/images/vectors/* dist/images",
    "watch:fonts": "onchange \"src/fonts\" -- run-s build:fonts",
    "watch:assets": "onchange \"src/assets\" -- run-s build:assets",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.1",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "stylelint": "^7.8.0",
    "svgo": "^0.6.6",
    "uglify-js": "^2.6.2"
  }
}